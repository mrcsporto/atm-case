<%- model_class = Client -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>

<%= form_for current_client do |f| %>
  <% if current_client.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% current_client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_client.role === "admin" %>
    <table class="table table-hover arrow">
      <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:full_name) %></th>
            <th><%= model_class.human_attribute_name(:client_number) %></th>
            <th><%= model_class.human_attribute_name(:cpf) %></th>
            <th><%= model_class.human_attribute_name(:role) %></th>
            <th><%= model_class.human_attribute_name(:created_at) %></th>
          </tr>
        </thead>
        <tbody>
          <% Client.all.each do |client| %>
            <tr>
              <td><%= client.id %></td>
              <td><%= client.full_name %></td>
              <td><%= client.client_number %></td>
              <td><%= client.cpf %></td>
              <td><%= client.role %></td>
              <td><%= client.created_at %></td>     
            </tr>
          <% end %>
        </tbody>
    </table>
    
  <% elsif current_client.role === "client"%>
      <div class="field">
      <%= f.label :full_name%>
      <%= text_field_tag :full_name,current_client.full_name, disabled: true, :class => 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :client_number%>
      <%= text_field_tag :client_number, current_client.client_number, disabled: true,  :class => 'form-control'%>
    </div>
    <div class="field">
      <%= f.label :cpf%>
      <%= text_field_tag :cpf, current_client.cpf, disabled: true, :class => 'form-control'%>
    </div>
    <div class="field">
      <%= f.label :role%>
      <%= text_field_tag :role, current_client.role, disabled: true, :class => 'form-control'%>
    </div>
  <% end %>
<% end %>





