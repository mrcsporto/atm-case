<%= form_for @bank_account, :html => { :class => "form-horizontal bank_account" } do |f| %>

  <% if @bank_account.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@bank_account.errors.count, "error") %> prohibited this bank_account from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @bank_account.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
  <% if current_client %>
    <%= f.label :client_id, :class => 'control-label col-lg-2 pull-left' %>
    <div class="col-lg-10">
      <%= text_field_tag :client_number, @current_client.client_number, id: "input-recipient", :class => 'form-control', disabled: true %>
    </div>
    <% else %>
    <%=f.error_span(:client_id) %>
    <% end %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bank_accounts_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
