<%- model_class = BankAccount -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<% if current_client.id === @bank_account.client.id %>
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name (:client_id) %>:</strong></dt>
    <dd><%= @bank_account.client_id %></dd>
    <dt><strong><%= model_class.human_attribute_name(:full_name) %>:</strong></dt>
    <dd><%= @current_client.full_name%></dd>
    <dt><strong><%= model_class.human_attribute_name(:client_number) %>:</strong></dt>
    <dd><%= @current_client.client_number%></dd>
    <dt><strong><%= model_class.human_attribute_name(:balance) %>:</strong></dt>
    <dd><%= @bank_account.balance %></dd>
    <dt><strong><%= model_class.human_attribute_name(:account_number) %>:</strong></dt>
    <dd><%= @bank_account.account_number %></dd>
  </dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              bank_accounts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bank_account_path(@bank_account), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bank_account_path(@bank_account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>